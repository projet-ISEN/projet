div.fullheight( layout="column" ng-controller="sidenavCtrl")
  md-sidenav( class="md-sidenav-left md-whiteframe-z2 fullheight" md-component-id="left" hide-print="hide-print" md-is-locked-open="$mdMedia('gt-sm')" tabindex="-1")
    md-toolbar.md-tall.md-hue-2
      span(flex='')
      .md-toolbar-tools-bottom.inset(layout='column')
        img(src='https://material.angularjs.org/latest/img/icons/angular-logo.svg', alt='')
    md-list(flex ng-repeat='underpart in menu')
      //div(ng-repeat='underpart in menu')
        //md-divider(ng-if = "$index")
        //md-subheader(ng-if = "underpart.name != ''") {{underpart.name}}
        //md-list-item(ng-repeat='item in underpart.values')
          a
            div(md-ink-ripple='', layout='row', layout-align='start center')
              .inset
                md-icon.material-icons {{item.icon}}
              .inset
                | {{item.title}}
      md-button.md-button-toggle(ng-click='toggle()', aria-controls='side-menu-{{section.name', flex='', layout='row', aria-expanded='{{isOpen()}}')
        | {{underpart.name}}
        span.pull-right.fa.fa-chevron-down.md-toggle-icon(aria-hidden='true', ng-class="{\'toggled\' : isOpen()}")
      ul.menu-toggle-list(ng-show='isOpen()', id='side-menu-{{underpart.name}}')
        li(ng-repeat='item in underpart.values')
          menu-link(section='{{item.title}}')
      
//      md-subheader Management
      md-list-item(ng-repeat='item in admin')
        a
          md-item-content(md-ink-ripple='', layout='row', layout-align='start center')
            .inset
              ng-md-icon(icon='{{item.icon}}')
            .inset
              | {{item.title}}