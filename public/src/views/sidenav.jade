div.fullheight( layout="column" ng-controller="sidenavCtrl")

  md-sidenav(
    class="md-sidenav-left md-whiteframe-z2 fullheight"
    md-component-id="left"
    hide-print="hide-print"
    md-is-locked-open="$mdMedia('gt-sm')"
    tabindex="-1" )

    header
        img(src='images/isen2.jpg' alt="logo de l'ISEN" style="width: 100%; padding: 0 20% 0 20%" )

    md-list( flex )

      menu-toggle( ng-repeat='underpart in menu' )

        md-divider(ng-if = "$index")

        .ng-binding.ng-scope.layout-row.flex(
            flex=''
            layout='row'
            ng-if = "$index"
            ng-click = "underpart.expanded = !underpart.expanded"
            ng-class = "{noHight : underpart.expanded}")
              | {{underpart.name}}
              span.flex(flex='')
              span
                md-icon( ng-class="{rotateP180: !underpart.expanded}" ) keyboard_arrow_down

          .toggle(
            ng-class = "{noHeight : !underpart.expanded}")
            md-list-item(
              ng-repeat='item in underpart.values'
              )

              a( ng-href='{{item.link}}')

                div(md-ink-ripple='' layout='row' layout-align='start center')
                  .inset
                    md-icon.material-icons {{item.icon}}
                  .inset
                    | {{item.title}}






//      md-subheader Management
      md-list-item(ng-repeat='item in admin')
        a
          md-item-content(md-ink-ripple='', layout='row', layout-align='start center')
            .inset
              ng-md-icon(icon='{{item.icon}}')
            .inset
              | {{item.title}}
