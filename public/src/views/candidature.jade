div(ng-controller='AppCtrl', layout='column', layout-align='center center', style='min-height: 300px;', ng-cloak='')
  form(name='myForm')
    p Note that invalid styling only applies if invalid and dirty
    md-input-container.md-block
      label Favorite Number
      md-select(name='myModel', ng-model='myModel', required='')
        md-option(value='1') One
        md-option(value='2') Two
      .errors(ng-messages='myForm.myModel.$error', ng-if='myForm.$dirty')
        div(ng-message='required') Required
    div(layout='row')
      md-button(ng-click='clearValue()', ng-disabled='!myModel', style='margin-right: 20px;') Clear
      md-button.md-primary(ng-click='save()', ng-disabled='myForm.$invalid', layout='', layout-align='center end') Save
